<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @weather %>

    <%= link_to 'Edit this weather', edit_weather_path(@weather), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this weather', weather_path(@weather), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to weathers', weathers_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
  <section class="ask ChatGPT">
  <div class="container">
    <h2 class="subtitle is-5">
      <strong><%= @weather.chats.count %></strong> Chats - powered by ChatGPT
    </h2>
    <%= render @weather.chats %>
    <div class="chats-form">
      <hr />
      <h3 class="subtitle is-3">Leave a reply</h3>
      <%= render partial: 'chats/form', locals: { chat: @weather.chats.build } %>
    </div>
  </div>
</section>
</div>
