<div class="py-3">
<%= form_with url: home_index_path, method: :get, class: "rounded-md outline-none px-3 py-2 mt-2" do |form| %>
  <%= form.text_field :search, placeholder: "City, state, country" %>
  <%= form.submit "Search", class: "text-black-900 hover:text-amber-700" %> | 
  <%= link_to "Clear Search", home_index_path, class: "text-black-900 hover:text-amber-700"%>
<% end %>
</div>